<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>

<form action="/restaurants/{{{restaurant.id}}}/edit" method="POST">
  <input type="text" placeholder="name" name="name" value="{{{restaurant.name}}}">
  <input type="text" placeholder="name_en" name="name_en" value="{{{restaurant.name_en}}}">
  <input type="text" placeholder="category" name="category" value="{{{restaurant.category}}}">
  <input type="text" placeholder="image" name="image" value="{{{restaurant.image}}}">
  <input type="text" placeholder="location" name="location" value="{{{restaurant.location}}}">
  <input type="text" placeholder="phone" name="phone" value="{{{restaurant.phone}}}">
  <input type="text" placeholder="google_map" name="google_map" value="{{{restaurant.google_map}}}">
  <input type="text" placeholder="rating" name="rating" value="{{{restaurant.rating}}}">
  <input type="text" placeholder="description" name="description" value="{{{restaurant.description}}}">
  <button type="submit">Edit</button>
</form>